<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag "logo_central.png", class: "mx-auto h-48 w-auto", alt: 'FARJ' %>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: "Email",
                    label_html: { class: "block text-sm/6 font-medium text-gray-900" },
                    wrapper_html: { class: "mb-4" },
                    input_html: {
                      autocomplete: "email",
                      class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
                    } %>
        <%= f.input :password,
                    required: false,
                    label: "Password",
                    label_html: { class: "block text-sm/6 font-medium text-gray-900" },
                    wrapper_html: { class: "mb-4" },
                    input_html: {
                      autocomplete: "current-password",
                      class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
                    } %>
      </div>

      <%= f.button :submit, "Entrar", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    <% end %>
  </div>
</div>
